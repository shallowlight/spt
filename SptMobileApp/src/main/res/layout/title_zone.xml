<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="42.24dp"
    android:background="@color/dkwhite"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/icon_back"
        android:layout_centerVertical="true"
        android:paddingStart="14.4dp"
        android:paddingLeft="14.4dp"
        android:paddingRight="9.6dp"
        android:paddingEnd="9.6dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imgBack" />

    <TextView
        android:textSize="16.8sp"
        android:layout_height="match_parent"
        android:textColor="@color/ltBlack"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/lblTitle" />

    <LinearLayout
        android:layout_height="match_parent"
        android:id="@+id/llBarMore"
        android:paddingEnd="14.4dp"
        android:paddingRight="14.4dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/lbl2Chat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/main_zone_tongtong"
            android:text="@string/chat_name"
            android:paddingLeft="9.6dp"
            android:paddingStart="9.6dp"
            android:paddingTop="4.8dp"
            android:paddingBottom="4.8dp"
            android:gravity="bottom|center_horizontal"
            android:textSize="8.6sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/list_divider" />
</RelativeLayout>

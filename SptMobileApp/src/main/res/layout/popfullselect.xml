<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/clickline_hight"
            android:background="@color/ui_gray_background">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_back" />

            <TextView
                android:id="@+id/lblPopBottomCommon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/ui_gray_black"
                android:textSize="@dimen/textsize_32px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:paddingStart="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/arrow_left_white"
                android:visibility="invisible" />
        </LinearLayout>

        <ListView
            android:id="@+id/lvPopBottomCommon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"></ListView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/background" />
    </LinearLayout>

</LinearLayout>
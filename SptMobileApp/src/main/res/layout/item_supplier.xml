<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvLetter"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/background"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/line_margin_30px"
        android:textColor="@color/gray"
        android:textSize="@dimen/textsize_24px"
        android:visibility="gone" />

    <com.totrade.spt.mobile.view.customize.SwipeView
        android:id="@+id/swipeView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height2">

        <LinearLayout
            android:id="@+id/llDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_margin_left"
            android:paddingRight="@dimen/activity_margin_left">

            <TextView
                android:id="@+id/tvName"
                style="@style/left_textview_style"
                android:textSize="@dimen/textsize_30px" />

            <ImageView
                android:id="@+id/imgSupLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_extend"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="..."
                android:gravity="center_vertical"
                android:layout_marginTop="-5dp"
                android:textColor="@color/ui_gray_light2"
                android:textSize="@dimen/textsize_32px"
                android:textStyle="bold"
                android:typeface="monospace" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAction1"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/ui_red"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_28px"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvAction2"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@color/ui_gray_light2"
                android:gravity="center"
                android:text="加入黑名单"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_28px"
                android:visibility="gone" />

        </LinearLayout>
    </com.totrade.spt.mobile.view.customize.SwipeView>

</LinearLayout>
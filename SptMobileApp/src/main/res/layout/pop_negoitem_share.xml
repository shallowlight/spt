<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="@dimen/textsize_28px"
        android:textColor="@color/gray"
        android:text="分享到" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblWeChat"
            style="@style/mainReleaseTv"
            android:drawablePadding="15dp"
            android:drawableTop="@drawable/img_wechat"
            android:text="微信好友" />

        <TextView
            android:id="@+id/lblWeChatCicle"
            style="@style/mainReleaseTv"
            android:drawablePadding="15dp"
            android:drawableTop="@drawable/img_wefriend"
            android:text="朋友圈" />
    </LinearLayout>

    <TextView
        android:id="@+id/lblCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:padding="15dp"
        android:text="取消"
        android:textColor="@color/blue"
        android:textSize="@dimen/textsize_32px" />

</LinearLayout>
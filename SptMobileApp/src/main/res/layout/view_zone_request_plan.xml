<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
       xmlns:android="http://schemas.android.com/apk/res/android"
       tools:showIn="@layout/fragment_zone_request_company">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/str_margin_15dp"
            android:paddingBottom="18dp"
            tools:src="@drawable/img_request_product_zone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/background"
            android:gravity="center_vertical"
            android:paddingLeft="14dp"
            tools:text="请填写企业相关信息(所有项均为必填项)"
            android:textSize="@dimen/str_textsize_14sp"
            android:textColor="@color/ltgray"/>
    </LinearLayout>
</merge>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvLetter"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:background="@color/background"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:textColor="@color/gray"
        android:textSize="@dimen/textsize_24px"
        android:visibility="gone" />

    <com.totrade.spt.mobile.view.customize.SwipeView
        android:id="@+id/swipeView"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/llItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">


                <com.totrade.spt.mobile.view.customize.CircleImageView
                    android:id="@+id/civPortrait"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:src="@drawable/img_headpic_def" />

                <TextView
                    android:id="@+id/tvMemberName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:gravity="center_vertical"
                    android:textColor="@color/ltBlack"
                    android:textSize="@dimen/textsize_28px" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvRemarks"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@color/color_gray_e5"
                android:gravity="center"
                android:text="备注"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_28px" />
        </LinearLayout>
    </com.totrade.spt.mobile.view.customize.SwipeView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="62dp"
        android:background="@color/background" />

</LinearLayout>

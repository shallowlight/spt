<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:gravity="center"
        android:visibility="gone" />

    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_gray_df" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="@dimen/textsize_32px"
            android:gravity="center"
            android:lineSpacingMultiplier="1.5"
            android:minHeight="60.0dip" />
         <CheckBox
            android:id="@+id/chkBox"
            android:button="@drawable/selector_checkbox"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="300dp"
        android:layout_height="0.5dp"
        android:background="@color/color_gray_df" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_gravity="bottom"
        android:divider="@drawable/activity_driver"
        android:gravity="center"
        android:orientation="horizontal"
        android:showDividers="middle" >

        <Button
            android:id="@+id/negativeButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/white_button_background_left"
            android:gravity="center"
            android:text="取消"
            
            android:textSize="13sp"
            android:textColor="@drawable/selector_tv_color2" />

        <Button
            android:id="@+id/positiveButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认"
            android:background="@drawable/white_button_background_right"
            android:textSize="13sp"
            android:textColor="@drawable/selector_tv_color2" />
    </LinearLayout>

</LinearLayout>
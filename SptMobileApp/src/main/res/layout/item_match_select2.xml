<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:text="全部"
            android:textColor="@drawable/selector_tv_color4"
            android:textSize="@dimen/textSize_14" />

        <ImageView
            android:id="@+id/iv_right_symbol"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="@dimen/space_horizontal"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/selector_iv_bg" />
    </FrameLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/selector_line_bg" />
</LinearLayout>
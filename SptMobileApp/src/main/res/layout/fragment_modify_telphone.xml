<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:divider="@drawable/activity_driver"
    android:orientation="vertical"
    android:showDividers="middle">

    <com.totrade.spt.mobile.view.customize.ComTitleBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:barBackground="@color/blue"
        app:left_btn_src="@drawable/icon_title_back_white"
        app:left_btn_visible="true"
        app:title_text="修改手机号码"
        app:title_visible="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_new_telphone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="新手机号码"
            android:textColor="#666666"
            android:textSize="13sp" />

        <com.totrade.spt.mobile.view.customize.ValidatorEditText
            android:id="@+id/et_new_telphone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_new_telphone"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/gray_txt_99"
            android:paddingLeft="15dp" />

        <TextView
            android:id="@+id/tv_action_auth_code"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_half_circle_blue_3"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="13sp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_auth_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="短信验证码"
            android:textColor="#666666"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/et_auth_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_auth_code"
            android:background="@null"
            android:gravity="center_vertical"
            android:paddingLeft="20dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_half_circle_blue_3"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>
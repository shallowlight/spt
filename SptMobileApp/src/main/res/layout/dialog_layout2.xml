<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:divider="@drawable/activity_driver"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/space"
            android:paddingTop="@dimen/space">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_horizontal2"
                android:layout_marginRight="@dimen/space_horizontal2"
                android:gravity="center"
                android:text="您的申请已提交"
                android:textColor="@color/ui_gray_black"
                android:textSize="@dimen/textsize_30px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_horizontal2"
                android:layout_marginRight="@dimen/space_horizontal2"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="您的申请已提交至商品通，请耐心等待！"
                android:textColor="@color/ui_gray_light1"
                android:textSize="@dimen/textsize_26px" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/ui_blue"
            android:textSize="@dimen/textSize_14" />

    </LinearLayout>
</android.support.v7.widget.CardView>
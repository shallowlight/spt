<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <com.totrade.spt.mobile.view.customize.ComTitleBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:barBackground="@color/blue"
        app:left_btn_src="@drawable/icon_title_back_white"
        app:left_btn_visible="true"
        app:right_btn_src="@drawable/icon_more"
        app:right_btn_visible="true"
        app:title_text="对账单"
        app:title_visible="true" />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/ctl_tab"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        app:tl_indicator_color="@color/blue"
        app:tl_textSelectColor="@color/blue"
        app:tl_textUnselectColor="@color/gray_txt_22"
        app:tl_underline_color="@color/color_gray_e5"
        app:tl_underline_height="1px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="日期"
            android:textColor="@color/gray_txt_99"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_date_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            tools:text="2016/12/01"
            android:textColor="@color/gray_txt_22"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="与"
            android:textColor="@color/gray_txt_99"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_date_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            tools:text="2016/12/01"
            android:textColor="@color/gray_txt_22"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/background" />

    <RelativeLayout
        android:id="@+id/rl_fund_statement_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
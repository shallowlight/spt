<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@drawable/activity_driver"
        android:orientation="vertical"
        android:paddingLeft="@dimen/space_horizontal"
        android:paddingRight="@dimen/space_horizontal"
        android:showDividers="middle|end">

        <TextView
            android:id="@+id/tvArrived"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/ltBlack"
            android:gravity="center"
            android:textColor="@color/color_gray_ed"
            android:textSize="12sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_hight"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_phone_num" />

            <View
                android:layout_width="1px"
                android:layout_height="25dp"
                android:layout_marginLeft="@dimen/space_horizontal"
                android:layout_marginRight="@dimen/space_horizontal"
                android:background="@color/ui_line_divider" />

            <EditText
                android:id="@+id/etPhoneNum"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:maxLines="1"
                android:textColorHint="@color/ui_gray_light3"
                android:textSize="@dimen/textsize_28px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_hight"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_verification_code" />

            <View
                android:layout_width="1px"
                android:layout_height="25dp"
                android:layout_marginLeft="@dimen/space_horizontal"
                android:layout_marginRight="@dimen/space_horizontal"
                android:background="@color/ui_line_divider" />

            <EditText
                android:id="@+id/etPhoneVerification"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:maxLines="1"
                android:textColorHint="@color/ui_gray_light3"
                android:textSize="@dimen/textsize_28px" />

            <TextView
                android:id="@+id/tvGetVerification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_btn_rect_blue2"
                android:padding="8dp"
                android:text="发送短信验证码"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_14" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:background="#f5f5f5"
                android:gravity="center"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_hight"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_pwd_set" />

            <View
                android:layout_width="1px"
                android:layout_height="25dp"
                android:layout_marginLeft="@dimen/space_horizontal"
                android:layout_marginRight="@dimen/space_horizontal"
                android:background="@color/ui_line_divider" />

            <EditText
                android:id="@+id/etPwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请设置新密码"
                android:inputType="textPassword"
                android:textColorHint="@color/ui_gray_light3"
                android:textSize="@dimen/textsize_28px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_hight"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_pwd_set" />

            <View
                android:layout_width="1px"
                android:layout_height="25dp"
                android:layout_marginLeft="@dimen/space_horizontal"
                android:layout_marginRight="@dimen/space_horizontal"
                android:background="@color/ui_line_divider" />

            <EditText
                android:id="@+id/etConfirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请确认新密码"
                android:inputType="textPassword"
                android:textColorHint="@color/ui_gray_light3"
                android:textSize="@dimen/textsize_28px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_hight"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_invation_code" />

            <View
                android:layout_width="1px"
                android:layout_height="25dp"
                android:layout_marginLeft="@dimen/space_horizontal"
                android:layout_marginRight="@dimen/space_horizontal"
                android:background="@color/ui_line_divider" />

            <EditText
                android:id="@+id/etInvation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入邀请码(若没有,可不填写)"
                android:inputType="textPassword"
                android:textColorHint="@color/ui_gray_light3"
                android:textSize="@dimen/textsize_28px" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbAgreedterms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:button="@drawable/selector_checkbox2"
            android:checked="true"
            android:text="我已阅读并接受 "
            android:textColor="@color/ui_gray_light1"
            android:textSize="@dimen/textsize_28px"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp" />

        <TextView
            android:id="@+id/readTerms"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="《商品通服务协议》"
            android:textColor="@color/blue"
            android:textSize="@dimen/textsize_28px" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_done"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height2"
        android:layout_margin="30dp"
        android:background="@drawable/btn_bg_blue2"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_32px" />

</LinearLayout>
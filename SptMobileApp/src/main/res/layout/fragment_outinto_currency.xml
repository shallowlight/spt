<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/blue">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@drawable/icon_title_back_white" />

        <com.flyco.tablayout.SegmentTabLayout
            android:id="@+id/stb_tab"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            tl:tl_bar_color="@color/blue"
            tl:tl_bar_stroke_color="@color/white"
            tl:tl_indicator_color="@color/white"
            tl:tl_indicator_corner_radius="5dp"
            tl:tl_tab_padding="25dp"
            tl:tl_textSelectColor="@color/blue"
            tl:tl_textUnselectColor="@color/white"
            tl:tl_textsize="15sp" />
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>